<%= simple_form_for @activity, url: url, html: { novalidate: true, class: 'needs-validation' }   do |f| %>
<%= f.input :name, required: true %>
<%= f.input :description, as: :text, required: true %>
<%= f.input :schedule, as: :text, required: true %>
<%= f.input :venue_id, collection: Venue.by_name, as: :select, label_method: :name, value_method: :id, required: true%>
<%= f.input :difficultylevel, collection: [["Bajo","bajo"],["Medio","medio"],["Alto","alto"]], required: true %>
<%= f.button :submit %>
<% end %>
